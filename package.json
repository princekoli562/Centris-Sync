{
  "name": "centris-sync",
  "version": "1.0.0",
  "description": "Desktop app for syncing files between centris and windows/mac",
  "main": "main.js",
  "author": "ViDoc Technologies Private Limited",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron .",
    "build": "cross-env NODE_ENV=production electron-builder"
  },
  "build": {
    "appId": "com.vidoc.centrissync",
    "productName": "Centris Sync",
    "copyright": "Â© 2025 ViDoc Technologies Pvt Ltd",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/images/favicon.ico"
    },
    "files": [
      "**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/.bin",
      "!**/*.map",
      "!**/test($|s).js"
    ]
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "electron": "^39.0.0",
    "electron-builder": "^24.0.0",
    "electron-reload": "^2.0.0-alpha.1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "bootstrap": "^5.3.8",
    "chokidar": "^4.0.3",
    "crypto-js": "^4.2.0",
    "jquery": "^3.7.1"
  }
}
