{
  "name": "centris-drive",
  "version": "1.0.0",
  "description": "Desktop app for syncing files between Centris and Windows/macOS",
  "main": "main.js",
  "author": "ViDoc Technologies Private Limited",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron .",
    "build": "cross-env NODE_ENV=production electron-builder",
    "build:mac:intel": "cross-env NODE_ENV=production electron-builder --mac dmg zip --x64",
    "build:mac:arm": "cross-env NODE_ENV=production electron-builder --mac dmg zip --arm64",
    "build:win": "cross-env NODE_ENV=production electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.vidoc.centrissync",
    "productName": "Centris Drive",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main/**/*",
      "main.js",
      "preload.js",
      "*.html",
      "assets/**/*"
    ],
    "asar": true,
    "asarUnpack": [
      "preload.js",
      "node_modules/chokidar/**"
    ],
    "mac": {
      "icon": "assets/images/favicon.icns",
      "identity": null,
      "sign": false,
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "assets/images/favicon.ico",
      "target": [
        "nsis",
        "portable"
      ],
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "electron-builder": "^26.4.0",
    "electron-reload": "^2.0.0-alpha.1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "better-sqlite3": "^12.5.0",
    "bootstrap": "^5.3.8",
    "chokidar": "^3.5.3",
    "crypto-js": "^4.2.0",
    "electron": "^26.6.10",
    "form-data": "^4.0.5",
    "jquery": "^3.7.1",
    "pdfjs-dist": "^5.4.449",
    "sudo-prompt": "^9.2.1",
    "uuid": "^13.0.0"
  }
}
