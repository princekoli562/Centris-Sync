{
  "name": "centris-drive",
  "version": "1.0.0",
  "description": "Desktop app for syncing files between Centris and Windows/macOS",
  "main": "main.js",
  "author": "ViDoc Technologies Private Limited",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron .",
    "build": "cross-env NODE_ENV=production electron-builder",
    "build:mac": "cross-env NODE_ENV=production electron-builder --mac dmg zip --universal",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "npm run rebuild"
  },
  "build": {
    "appId": "com.vidoc.centrissync",
    "productName": "Centris Drive",
    "buildDependenciesFromSource": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "main/**/*",
      "main.js",
      "preload.js",
      "*.html",
      "assets/**/*"
    ],
    "asar": true,
    "asarUnpack": [
      "preload.js",
      "node_modules/chokidar/**"
    ],
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "assets/images/favicon.icns",
      "identity": null,
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "sign": false
    },
    "win": {
      "target": ["nsis", "portable"],
      "requestedExecutionLevel": "requireAdministrator",
      "icon": "assets/images/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    }
  },
    "devDependencies": {
    "cross-env": "^10.1.0",
    "electron": "^26.6.10",
    "electron-builder": "^26.0.12",
    "@electron/rebuild": "^4.0.1",
    "electron-reload": "^2.0.0-alpha.1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "better-sqlite3": "^12.5.0",
    "bootstrap": "^5.3.8",
    "chokidar": "^3.5.3",
    "crypto-js": "^4.2.0",
    "form-data": "^4.0.5",
    "jquery": "^3.7.1",
    "pdfjs-dist": "^5.4.449",
    "sudo-prompt": "^9.2.1"
  }
}
